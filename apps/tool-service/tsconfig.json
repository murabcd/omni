{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"allowImportingTsExtensions": true,
		"types": ["node"],
		"baseUrl": ".",
		"paths": {
			"@omni/prompts": ["../../packages/prompts/src/index.ts"]
		},
		"rootDir": "../..",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"noEmit": true
	},
	"include": ["src", "../bot/src"]
}
