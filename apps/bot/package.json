{
	"name": "@omni/bot",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "bun run build:skills && bun run build:soul && bun run build:bootstrap && tsx src/index.ts",
		"start": "node --enable-source-maps dist/index.js",
		"build": "tsx scripts/build-runtime-skills.ts && tsx scripts/build-soul.ts && tsx scripts/build-bootstrap.ts && tsc -p tsconfig.build.json",
		"build:skills": "tsx scripts/build-runtime-skills.ts",
		"build:soul": "tsx scripts/build-soul.ts",
		"build:bootstrap": "tsx scripts/build-bootstrap.ts",
		"check": "biome check --write src tests scripts config",
		"type-check": "tsc --noEmit -p tsconfig.json",
		"test": "vitest run --config vitest.config.ts"
	},
	"dependencies": {
		"@ai-sdk/google": "catalog:",
		"@ai-sdk/openai": "catalog:",
		"@grammyjs/runner": "^2.0.3",
		"@grammyjs/transformer-throttler": "^1.2.1",
		"@json-render/core": "catalog:",
		"@json-render/react": "catalog:",
		"@mendable/firecrawl-js": "catalog:",
		"@omni/prompts": "workspace:*",
		"@posthog/agent-toolkit": "catalog:",
		"ai": "catalog:",
		"arkregex": "catalog:",
		"beautiful-mermaid": "catalog:",
		"dotenv": "catalog:",
		"firecrawl-aisdk": "catalog:",
		"grammy": "^1.39.3",
		"jsonrepair": "^3.13.2",
		"mammoth": "^1.11.0",
		"markdown-it": "^14.1.0",
		"sharp": "catalog:",
		"zod": "catalog:"
	},
	"devDependencies": {
		"@types/node": "catalog:tooling",
		"@types/markdown-it": "^14.1.2",
		"@vitest/coverage-v8": "catalog:tooling",
		"tsx": "catalog:tooling",
		"typescript": "catalog:tooling",
		"vitest": "catalog:tooling"
	}
}
