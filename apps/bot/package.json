{
	"name": "@omni/bot",
	"private": true,
	"version": "0.1.0",
	"type": "module",
	"scripts": {
		"dev": "bun run build:skills && bun run build:soul && bun run build:bootstrap && tsx src/index.ts",
		"start": "node --enable-source-maps dist/index.js",
		"build": "tsx scripts/build-runtime-skills.ts && tsx scripts/build-soul.ts && tsx scripts/build-bootstrap.ts && tsc -p tsconfig.json",
		"build:skills": "tsx scripts/build-runtime-skills.ts",
		"build:soul": "tsx scripts/build-soul.ts",
		"build:bootstrap": "tsx scripts/build-bootstrap.ts",
		"check": "biome check --write src tests scripts config",
		"type-check": "tsc --noEmit -p tsconfig.json",
		"test": "vitest run --config vitest.config.ts"
	},
	"dependencies": {
		"@ai-sdk/google": "^3.0.20",
		"@ai-sdk/openai": "3.0.12",
		"@grammyjs/runner": "^2.0.3",
		"@grammyjs/transformer-throttler": "^1.2.1",
		"@json-render/core": "^0.2.0",
		"@mendable/firecrawl-js": "^4.12.0",
		"@posthog/agent-toolkit": "^0.2.4",
		"ai": "^6.0.68",
		"arkregex": "^0.0.5",
		"dotenv": "^16.6.1",
		"firecrawl-aisdk": "^0.8.1",
		"grammy": "^1.39.3",
		"mammoth": "^1.11.0",
		"markdown-it": "^14.1.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@types/node": "^22.19.7",
		"@types/markdown-it": "^14.1.2",
		"@vitest/coverage-v8": "^4.0.18",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vitest": "^4.0.18"
	}
}
